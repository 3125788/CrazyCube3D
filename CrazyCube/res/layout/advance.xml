<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:scrollbars="vertical" android:orientation="vertical">
    <ScrollView android:layout_height="fill_parent" 
    		android:layout_width="fill_parent" >
        <LinearLayout android:layout_width="fill_parent" 
        	android:layout_height="fill_parent"
        	android:padding="10dip"
        	android:orientation="vertical">

				<TextView android:id="@+id/advText11" 
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:textAppearance="?android:attr/textAppearanceMedium" 
					android:text="@string/szAdvText11"/>
				<TextView android:id="@+id/advText12"
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:text="@string/szAdvText11_1"
					android:textColor="#00ff00"/>
        	<LinearLayout android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:orientation="horizontal">
        		<LinearLayout android:layout_width="220dip"
        			android:layout_height="fill_parent"
        			android:orientation="horizontal">
       				<ImageView android:id="@+id/advImgClock" 
       					android:layout_gravity="left"
       					android:layout_height="fill_parent"
       					android:layout_width="wrap_content"
       					android:src="@drawable/time1"/>
       				<TextView android:layout_height="fill_parent"
       					android:layout_width="wrap_content" 
       					android:textAppearance="?android:attr/textAppearanceLarge" 
       					android:id="@+id/advClock" 
       					android:gravity="center_vertical" 
       					android:text="@string/szAdvClock"/>
       			</LinearLayout>
       			<Button android:id="@+id/advBtnClock"
       			 	android:layout_height="fill_parent"
       				android:layout_width="wrap_content"
       				android:text="@string/szAdvConsume"
       				android:layout_gravity="right"/>
			</LinearLayout>
			<TextView android:id="@+id/advClockActive"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
		    	android:textAppearance="?android:attr/textAppearanceSmall" 
		    	android:text="@string/szAdvActiveTip"
				android:textColor="#00ff00"/>

        	<LinearLayout android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:orientation="horizontal">
        		<LinearLayout android:layout_width="220dip"
        			android:layout_height="fill_parent"
        			android:orientation="horizontal">
       				<ImageView android:id="@+id/advImgStep" 
       					android:layout_gravity="left"
       					android:layout_height="fill_parent"
       					android:layout_width="wrap_content"
       					android:src="@drawable/icon"/>
       				<TextView android:layout_height="fill_parent"
       					android:layout_width="wrap_content" 
       					android:textAppearance="?android:attr/textAppearanceLarge" 
       					android:id="@+id/advStep" 
       					android:gravity="center_vertical" 
       					android:text="@string/szAdvStep" />
       			</LinearLayout>
       			<Button android:id="@+id/advBtnStep"
       			 	android:layout_height="fill_parent"
       				android:layout_width="wrap_content"
       				android:text="@string/szAdvConsume"
       				android:layout_gravity="right"/>
			</LinearLayout>
			<TextView android:id="@+id/advStepActive"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
		    	android:textAppearance="?android:attr/textAppearanceSmall" 
		    	android:text="@string/szAdvActiveTip"
		    	android:textColor="#00ff00"/>

        	<LinearLayout android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:orientation="horizontal">
        		<LinearLayout android:layout_width="220dip"
        			android:layout_height="fill_parent"
        			android:orientation="horizontal">
       				<ImageView android:id="@+id/advImgShake" 
       					android:layout_gravity="left"
       					android:layout_height="fill_parent"
       					android:layout_width="wrap_content"
       					android:src="@drawable/icon"/>
       				<TextView android:layout_height="fill_parent"
       					android:layout_width="wrap_content" 
       					android:textAppearance="?android:attr/textAppearanceLarge" 
       					android:id="@+id/advShake" 
       					android:gravity="center_vertical" 
       					android:text="@string/szAdvShake" />
       			</LinearLayout>
       			<Button android:id="@+id/advBtnShake"
       			 	android:layout_height="fill_parent"
       				android:layout_width="wrap_content"
       				android:text="@string/szAdvConsume"
       				android:layout_gravity="right"/>
			</LinearLayout>
			<TextView android:id="@+id/advShakeActive"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
		    	android:textAppearance="?android:attr/textAppearanceSmall" 
		    	android:text="@string/szAdvActiveTip"
		    	android:textColor="#00ff00"/>

<!-- 高级样式
        	<LinearLayout android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:orientation="horizontal">
        		<LinearLayout android:layout_width="220dip"
        			android:layout_height="fill_parent"
        			android:orientation="horizontal">
       				<ImageView android:layout_gravity="left"
       					android:layout_height="fill_parent"
       					android:layout_width="wrap_content"
       					android:src="@drawable/icon"/>
       				<TextView android:layout_height="fill_parent"
       					android:layout_width="wrap_content" 
       					android:textAppearance="?android:attr/textAppearanceLarge" 
       					android:id="@+id/advStyle" 
       					android:gravity="center_vertical" 
       					android:text="高级样式"/>
       			</LinearLayout>
       			<Button android:id="@+id/advBtnStyle"
       			 	android:layout_height="fill_parent"
       				android:layout_width="wrap_content"
       				android:text="激活" 
       				android:layout_gravity="right"/>
			</LinearLayout>	
			<TextView android:id="@+id/advStyleActive"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
		    	android:textAppearance="?android:attr/textAppearanceSmall" 
		    	android:text="@string/szAdvActiveTip"
		    	android:textColor="#00ff00"/>
-->		
        	<LinearLayout android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:orientation="horizontal">
        		<LinearLayout android:layout_width="220dip"
        			android:layout_height="fill_parent"
        			android:orientation="horizontal">
       				<ImageView android:layout_gravity="left"
       					android:layout_height="fill_parent"
       					android:layout_width="wrap_content"
       					android:src="@drawable/study"/>
       				<TextView android:layout_height="fill_parent"
       					android:layout_width="wrap_content" 
       					android:textAppearance="?android:attr/textAppearanceLarge" 
       					android:id="@+id/advMethod1" 
       					android:gravity="center_vertical" 
       					android:text="@string/szAdvMethod1"/>
       			</LinearLayout>
       			<Button android:id="@+id/advBtnMethod1"
       			 	android:layout_height="fill_parent"
       				android:layout_width="wrap_content"
       				android:text="激活" 
       				android:layout_gravity="right"/>
			</LinearLayout>
			<TextView android:id="@+id/advMethod1Active"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
		    	android:textAppearance="?android:attr/textAppearanceSmall" 
		    	android:text="@string/szAdvActiveTip"
		    	android:textColor="#00ff00"/>

				<TextView android:id="@+id/advText11"
					android:paddingTop="20dip" 
					android:layout_width="wrap_content"
					android:layout_height="fill_parent"
					android:textAppearance="?android:attr/textAppearanceMedium" 
					android:text="@string/szAdvNotice"
					android:textColor="#ffff00"/>

        </LinearLayout>
        
    </ScrollView>
</LinearLayout>
